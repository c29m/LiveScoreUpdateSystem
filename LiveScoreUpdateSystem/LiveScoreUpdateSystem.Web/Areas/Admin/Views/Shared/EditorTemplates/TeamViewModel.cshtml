@using LiveScoreUpdateSystem.Web.Areas.Admin.Models
@model TeamViewModel

<div class="form-group">
    <label>Name</label>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-tag"></i>
        </span>
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name", required = true } })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>

<div class="form-group">
    <label>Logo link</label>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-picture"></i>
        </span>
        @Html.EditorFor(m => m.LogoUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "Logo url", required = true } })
    </div>
</div>

<div class="form-group">
    <label>League to participate in</label>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-flag"></i>
        </span>
        @Html.DropDownListFor(m => m.LeagueName, Model.LeaguesSelectList, new { @class = "form-control", placeholder = "League" })
    </div>
</div>