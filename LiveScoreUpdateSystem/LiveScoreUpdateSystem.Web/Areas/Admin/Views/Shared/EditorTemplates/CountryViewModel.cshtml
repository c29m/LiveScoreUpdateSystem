@using LiveScoreUpdateSystem.Web.Areas.Admin.Models
@model CountryViewModel

<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-flag"></span>
        </span>
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name", required=true } })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-check"></span></span>
        @Html.EditorFor(m => m.FlagPictureUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "National Flag Url", required=true} })
        @Html.ValidationMessageFor(m => m.FlagPictureUrl)
    </div>
</div>